#!/usr/bin/env bash
# This script installs and configures nginx on Ubuntu to serve a custom page with "Holberton School"

# Exit on error
set -e

# Update package list
apt-get update -y

# Install nginx
apt-get install nginx -y

# Make sure nginx starts on boot and is running now
service nginx start || true

# Replace default index page with required content
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure the correct file is used by Nginx (overwrite if needed)
rm -f /var/www/html/index.nginx-debian.html
ln -sf /var/www/html/index.html /var/www/html/index.nginx-debian.html
